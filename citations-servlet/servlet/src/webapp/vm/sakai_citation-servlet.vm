#* 
 * macro to easily show multivalued fields
 *#
#macro(showMultivalued $values)
	#if(! $values.isEmpty())
		<table>
			#foreach($value in $values)
				<tr>
					<td>
						$!value
					</td>
				</tr>
			#end
		</table>
	#end
#end


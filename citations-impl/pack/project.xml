<?xml version="1.0" encoding="UTF-8"?>

<project>
        <pomVersion>3</pomVersion>
        <extend>../../../master/project.xml</extend>
        <name>sakai-citations-pack</name>
        <groupId>sakaiproject</groupId>
        <id>sakai-citations-pack</id>
        <currentVersion>${sakai.version}</currentVersion>
        <organization>
                <name>University of Michigan</name>
                <url>http://sakaiproject.org/</url>
        </organization>
        <inceptionYear>2003</inceptionYear>

        <properties>
                <!-- deploy as a components -->
                <deploy.type>components</deploy.type>
        </properties>

        <dependencies>

                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-citations-impl</artifactId>
                        <version>${sakai.version}</version>
                        <properties>
                                <war.bundle>true</war.bundle>
                        </properties>
                </dependency>
                
                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-citations-util</artifactId>
                        <version>${sakai.version}</version>
                        <properties>
                                <deploy.target>shared</deploy.target>
                        </properties>
                </dependency>
                
                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-citations-xserver</artifactId>
                        <version>${sakai.version}</version>
                        <properties>
                                <deploy.target>shared</deploy.target>
                        </properties>
                </dependency>

                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-util</artifactId>
                        <version>${sakai.version}</version>
                        <properties>
                                <war.bundle>true</war.bundle>
                        </properties>
                </dependency>

                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-content-util</artifactId>
                        <version>${sakai.version}</version>
                        <properties>
                                <war.bundle>true</war.bundle>
                        </properties>
                </dependency>

                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-db-storage</artifactId>
                        <version>${sakai.version}</version>
                        <properties>
                                <war.bundle>true</war.bundle>
                        </properties>
                </dependency>

                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-entity-util</artifactId>
                        <version>${sakai.version}</version>
                        <properties>
                                <war.bundle>true</war.bundle>
                        </properties>
                </dependency>

                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-event-util</artifactId>
                        <version>${sakai.version}</version>
                        <properties>
                                <war.bundle>true</war.bundle>
                        </properties>
                </dependency>

                <dependency>
                        <groupId>OKI</groupId>
                        <artifactId>OkiOSID</artifactId>
                        <version>2.0</version>
                        <properties>
                                <deploy.target>shared</deploy.target>
                        </properties>
                </dependency>

        </dependencies>

        <build>

                <!-- java source -->
                <sourceDirectory>src/java</sourceDirectory>

        </build>

</project>
